<div class="container">
  <h1><%= @list.name %></h1>
  <p><%= link_to "Add Movie to List",  new_list_bookmark_path(@list)%></p>
  <% @list.bookmarks.each do |bookmark| %>
    <p><%= bookmark.movie.title %></p>
    <p><%= image_tag bookmark.movie.poster_url, alt: "Le Wagon", width: 200 %></p>
    <p><%= bookmark.movie.overview %></p>
    <p><%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
  <% end %>
  <%= link_to "Back", lists_path %>
</div>
